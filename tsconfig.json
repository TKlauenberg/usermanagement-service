{
    "include": [
        "./src/**/*.ts"
    ],
    "compilerOptions": {
        "allowJs": false,
        "target": "es2018",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "incremental": true
    }
}