  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current File",
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/lib/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cucumber - All Features",
      "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Cucumber - debug tag",
      "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
      "args": ["-t", "@debug"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
